<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jee="http://www.springframework.org/schema/jee" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:jaxrs="http://cxf.apache.org/jaxrs" xmlns:jaxrs-client="http://cxf.apache.org/jaxrs-client"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-4.3.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.3.xsd
        http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
        http://cxf.apache.org/jaxrs-client http://cxf.apache.org/schemas/jaxrs-client.xsd"
    default-lazy-init="true">

    <jaxrs:server id="echoServiceServer" address="/">
        <jaxrs:serviceBeans>
            <ref bean="echoService" />
            <ref bean="auralService" />
            <ref bean="mindService" />
            <ref bean="speakService" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
        </jaxrs:providers>
        <jaxrs:features>
        </jaxrs:features>
    </jaxrs:server>

    <jaxrs-client:client id="auralServiceClient" address="http://localhost:8080/" serviceClass="com.test.zipkin.AuralService"
        threadSafe="true">
        <jaxrs-client:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
        </jaxrs-client:providers>
        <jaxrs-client:features>
        </jaxrs-client:features>
    </jaxrs-client:client>

    <jaxrs-client:client id="mindServiceClient" address="http://localhost:8080/" serviceClass="com.test.zipkin.MindService"
        threadSafe="true">
        <jaxrs-client:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
        </jaxrs-client:providers>
        <jaxrs-client:features>
        </jaxrs-client:features>
    </jaxrs-client:client>

    <jaxrs-client:client id="speakServiceClient" address="http://localhost:8080/" serviceClass="com.test.zipkin.SpeakService"
        threadSafe="true">
        <jaxrs-client:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
        </jaxrs-client:providers>
        <jaxrs-client:features>
        </jaxrs-client:features>
    </jaxrs-client:client>

    <bean id="echoService" class="com.test.zipkin.impl.EchoServiceImpl">
        <property name="auralService" ref="auralServiceClient" />
        <property name="speakService" ref="speakServiceClient" />
    </bean>

    <bean id="auralService" class="com.test.zipkin.impl.AuralServiceImpl">
        <property name="mindService" ref="mindServiceClient" />
    </bean>
    <bean id="speakService" class="com.test.zipkin.impl.SpeakServiceImpl">
        <property name="mindService" ref="mindServiceClient" />
    </bean>
    <bean id="mindService" class="com.test.zipkin.impl.MindServiceImpl">
        <property name="template" ref="jdbcTemplate" />
    </bean>

    <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName">
            <value>jdbc/test.ds</value>
        </property>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"></property>
    </bean>
</beans>
